<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grupointegrado.tambor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tambor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_tambor_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.PassadaActivity"
            android:label="Ranking das passadas"></activity>
        <activity android:name=".activity.AdicionarPassadaActivity"
            android:label="Adicionar tempo da passada" />
        <activity
            android:name=".activity.AdicionarCompetidorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:label="Adicionar competidor" />
        <activity
            android:name=".activity.CompetidorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Competidores" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>